{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "~/*": ["./src/*"],
      "~shared/*": ["./src/shared/*"],
      "~entities/*": ["./src/entities/*"],
      "~features/*": ["./src/features/*"],
      "~widgets/*": ["./src/widgets/*"],
      "~pages/*": ["./src/pages/*"],
      "~app/*": ["./src/app/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
